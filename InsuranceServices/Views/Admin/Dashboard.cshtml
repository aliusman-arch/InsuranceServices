@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group shadow-sm">
                <a href="#" class="list-group-item list-group-item-action active bg-primary">Admin Menu</a>
                <a asp-action="Dashboard" class="list-group-item list-group-item-action"><i class="bi bi-speedometer2"></i> Overview</a>
                <a asp-action="ManageSchemes" class="list-group-item list-group-item-action"><i class="bi bi-list-check"></i> Manage Schemes</a>
                <a asp-action="ViewApplications" class="list-group-item list-group-item-action">
                    <i class="bi bi-clipboard-check"></i> View Applications
                </a>
                <a asp-action="ViewPolicyHolders" class="list-group-item list-group-item-action">
                    <i class="bi bi-people"></i> View Policy Holders
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <h2 class="mb-4">System Overview</h2>
            <div class="row text-center">
                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow-sm bg-primary text-white p-4">
                        <h3>@ViewBag.TotalUsers</h3>
                        <p class="mb-0">Registered Users</p>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow-sm bg-success text-white p-4">
                        <h3>@ViewBag.TotalSchemes</h3>
                        <p class="mb-0">Active Schemes</p>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mt-2">
                <div class="card-body text-center py-5">
                    <i class="bi bi-shield-lock text-muted display-1"></i>
                    <h4 class="mt-3">Admin Secure Area</h4>
                    <p>Use the sidebar to manage insurance products and view customer data.</p>
                </div>
            </div>
        </div>
    </div>
</div>