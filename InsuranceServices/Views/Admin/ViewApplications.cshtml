@model IEnumerable<InsuranceServices.Models.UserPolicy>
@{
    ViewData["Title"] = "Manage Applications";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-file-earmark-person text-primary me-2"></i>Policy Applications</h2>
        <span class="badge bg-primary rounded-pill px-3 py-2">Total: @Model.Count()</span>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Applicant</th>
                        <th>Policy Number</th>
                        <th>Scheme</th>
                        <th>Applied Date</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@item.User?.FullName</div>
                                <div class="small text-muted">@item.User?.Email</div>
                            </td>
                            <td><span class="font-monospace text-uppercase">@item.PolicyNumber</span></td>
                            <td><span class="badge bg-info text-dark">@item.InsuranceScheme?.SchemeName</span></td>
                            <td>@item.StartDate.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (item.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split me-1"></i>Pending</span>
                                }
                                else
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>@item.Status</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (item.Status == "Pending")
                                {
                                    <form asp-action="ApprovePolicy" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@item.PolicyId" />
                                        <button type="submit" class="btn btn-success btn-sm rounded-pill px-3 shadow-sm">
                                            Approve
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <button class="btn btn-outline-secondary btn-sm rounded-pill px-3" disabled>Processed</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>