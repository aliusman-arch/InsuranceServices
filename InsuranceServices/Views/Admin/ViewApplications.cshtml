@model IEnumerable<InsuranceServices.Models.UserPolicy>
@{
    ViewData["Title"] = "Policy Applications";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary fw-bold"><i class="bi bi-clipboard-check"></i> Incoming Applications</h2>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Customer</th>
                        <th>Policy #</th>
                        <th>Scheme</th>
                        <th>Applied Date</th>
                        <th>Status</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.User?.FullName</strong><br />
                                <small class="text-muted">@item.User?.Email</small>
                            </td>
                            <td class="text-uppercase fw-bold text-muted">@item.PolicyNumber</td>
                            <td>@item.InsuranceScheme?.SchemeName</td>
                            <td>@item.StartDate.ToShortDateString()</td>
                            <td>
                                <span class="badge @(item.Status == "Pending" ? "bg-warning text-dark" : "bg-success")">
                                    @item.Status
                                </span>
                            </td>
                            <td class="text-center">
                                @if (item.Status == "Pending")
                                {
                                    <form asp-action="ApprovePolicy" asp-route-id="@item.PolicyId" method="post">
                                        <button type="submit" class="btn btn-sm btn-success px-4">Approve</button>
                                    </form>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle-fill text-success"></i>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>