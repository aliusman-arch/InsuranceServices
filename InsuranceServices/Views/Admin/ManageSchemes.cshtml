@model IEnumerable<InsuranceServices.Models.InsuranceScheme>
@{
    ViewData["Title"] = "Manage Schemes";
}

<style>
    .scheme-table thead {
        background: #2c3e50;
        color: white;
        border: none;
    }

    .scheme-table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
        padding: 1.2rem;
    }

    .scheme-table td {
        padding: 1.2rem;
        border-bottom: 1px solid #f0f2f5;
    }

    .category-pill {
        font-size: 0.75rem;
        font-weight: 700;
        padding: 5px 12px;
        border-radius: 50px;
    }
    /* Dynamic Colors based on Category names */
    .cat-life {
        background-color: #cfe2ff;
        color: #084298;
    }

    .cat-health {
        background-color: #d1e7dd;
        color: #0f5132;
    }

    .cat-vehicle {
        background-color: #fff3cd;
        color: #664d03;
    }

    .cat-property {
        background-color: #f8d7da;
        color: #842029;
    }

    .action-btn {
        width: 35px;
        height: 35px;
        padding: 0;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        transition: 0.2s;
    }
</style>

<div class="container-fluid py-5 px-lg-5">
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">Product Catalog</h2>
            <p class="text-muted mb-0">Create, edit, and retire insurance schemes from the public listing.</p>
        </div>
        <a asp-action="CreateScheme" class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold">
            <i class="bi bi-plus-circle-fill me-2"></i>CREATE NEW SCHEME
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover scheme-table mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Scheme Identification</th>
                        <th>Type</th>
                        <th>Coverage Limit</th>
                        <th>Tenure Range</th>
                        <th class="text-center">Catalog Controls</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Logic to assign pill color classes
                        var catClass = item.SchemeType?.ToLower().Contains("life") == true ? "cat-life" :
                        item.SchemeType?.ToLower().Contains("health") == true ? "cat-health" :
                        item.SchemeType?.ToLower().Contains("vehicle") == true ? "cat-vehicle" :
                        item.SchemeType?.ToLower().Contains("property") == true ? "cat-property" : "bg-light text-dark";

                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-light p-2 me-3 text-primary">
                                        <i class="bi bi-shield-shaded fs-5"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@item.SchemeName</div>
                                        <div class="small text-muted">ID: #SCH-@item.SchemeId.ToString("D3")</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="category-pill @catClass">@item.SchemeType</span>
                            </td>
                            <td>
                                <div class="fw-bold text-success">$@item.AmountLimit.ToString("N0")</div>
                                <div class="small text-muted">Maximum Claim</div>
                            </td>
                            <td>
                                <div class="text-dark"><i class="bi bi-hourglass-split me-1 text-muted"></i>@item.TenureYears Years</div>
                                <div class="small text-muted">Fixed Duration</div>
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="EditScheme" asp-route-id="@item.SchemeId"
                                       class="btn btn-outline-primary action-btn" title="Edit Scheme">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <form asp-action="DeleteScheme" asp-route-id="@item.SchemeId" method="post"
                                          onsubmit="return confirm('WARNING: Deleting this scheme will remove it from public view. Continue?');">
                                        <button type="submit" class="btn btn-outline-danger action-btn" title="Delete Scheme">
                                            <i class="bi bi-trash3"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>