@model IEnumerable<InsuranceServices.Models.InsuranceScheme>
@{
    ViewData["Title"] = "Manage Schemes";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Active Insurance Schemes</h2>
        <a asp-action="CreateScheme" class="btn btn-success fw-bold">
            <i class="bi bi-plus-lg"></i> ADD NEW SCHEME
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Scheme Name</th>
                        <th>Category</th>
                        <th>Coverage</th>
                        <th>Tenure</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.SchemeName</td>
                            <td><span class="badge bg-info text-dark">@item.SchemeType</span></td>
                            <td>$@item.AmountLimit.ToString("N2")</td>
                            <td>@item.TenureYears Years</td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <a asp-action="EditScheme" asp-route-id="@item.SchemeId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    <form asp-action="DeleteScheme" asp-route-id="@item.SchemeId" method="post" onsubmit="return confirm('Are you sure you want to delete this scheme?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>