@model IEnumerable<InsuranceServices.Models.User>
@{
    ViewData["Title"] = "Policy Holders";
}

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        background-color: #e9ecef;
        color: #0d6efd;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-weight: bold;
        text-transform: uppercase;
    }

    .holder-table thead {
        background: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
    }

    .holder-table th {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        color: #6c757d;
        padding: 1.2rem;
    }

    .holder-card {
        border-radius: 15px;
        border: none;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }

    .contact-link {
        text-decoration: none;
        color: inherit;
        transition: 0.2s;
    }

        .contact-link:hover {
            color: #0d6efd;
        }
</style>

<div class="container-fluid py-5 px-lg-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Customer Directory</h2>
            <p class="text-muted mb-0">Manage and view details of all registered policy holders.</p>
        </div>
        <div class="bg-white shadow-sm rounded-pill px-4 py-2 border">
            <span class="text-muted small fw-bold">TOTAL MEMBERS: </span>
            <span class="text-primary fw-bold">@Model.Count()</span>
        </div>
    </div>

    <div class="card holder-card overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle holder-table mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">Full Name & identity</th>
                        <th>Email Address</th>
                        <th>Phone Number</th>
                        <th>Residential Address</th>
                        <th>Member Since</th>
                        <th class="text-center">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="avatar-circle me-3 shadow-sm">
                                        @user.FullName.Substring(0, 1)
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@user.FullName</div>
                                        <div class="small text-muted text-uppercase" style="font-size: 0.65rem;">ID: #USR-@user.UserId.ToString("D4")</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <a href="mailto:@user.Email" class="contact-link">
                                    <i class="bi bi-envelope-at me-2 text-muted"></i>@user.Email
                                </a>
                            </td>
                            <td>
                                <a href="tel:@user.PhoneNumber" class="contact-link">
                                    <i class="bi bi-telephone me-2 text-muted"></i>
                                    @(string.IsNullOrEmpty(user.PhoneNumber) ? "Not Provided" : user.PhoneNumber)
                                </a>
                            </td>
                            <td>
                                <span class="text-muted small"><i class="bi bi-geo-alt me-1"></i>@user.Address</span>
                            </td>
                            <td>
                                <div class="fw-bold">@user.CreatedAt.ToString("MMM dd, yyyy")</div>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill px-3">
                                    Active
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>