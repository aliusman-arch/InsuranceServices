@{
    ViewData["Title"] = "Privacy Policy";
    var lastUpdated = "January 04, 2026";
}

<style>
    .privacy-header {
        background: white;
        border-radius: 20px;
        padding: 40px;
        border-bottom: 5px solid var(--accent-orange);
        margin-bottom: 30px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    }

    .sidebar-sticky {
        position: sticky;
        top: 100px;
    }

    .privacy-section {
        background: white;
        padding: 30px;
        border-radius: 15px;
        margin-bottom: 25px;
        border: 1px solid #eee;
    }

    .toc-link {
        color: #666;
        text-decoration: none;
        display: block;
        padding: 8px 15px;
        border-left: 2px solid transparent;
        transition: all 0.3s;
    }

        .toc-link:hover, .toc-link.active {
            color: var(--primary-blue);
            border-left-color: var(--accent-orange);
            background: #f8f9fa;
        }

    section h3 {
        color: var(--primary-blue);
        font-weight: 700;
        margin-bottom: 20px;
    }
</style>

<div class="container py-5">
    <div class="privacy-header text-center text-md-start d-md-flex justify-content-between align-items-center">
        <div>
            <h1 class="display-5 fw-bold text-primary">Privacy Policy</h1>
            <p class="text-muted mb-0">Commitment to Data Transparency & Security</p>
            <small class="badge bg-light text-dark border mt-2">Last Updated: @lastUpdated</small>
        </div>
        <div class="mt-3 mt-md-0">
            <button onclick="window.print()" class="btn btn-outline-secondary rounded-pill">
                <i class="bi bi-printer me-2"></i> Print Policy
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-3 d-none d-lg-block">
            <div class="sidebar-sticky">
                <h6 class="fw-bold text-uppercase small text-muted mb-3">Contents</h6>
                <nav id="privacy-nav">
                    <a href="#summary" class="toc-link">Executive Summary</a>
                    <a href="#data-collection" class="toc-link">Data Collection</a>
                    <a href="#usage" class="toc-link">How We Use It</a>
                    <a href="#cookies" class="toc-link">Cookie Policy</a>
                    <a href="#rights" class="toc-link">Your Legal Rights</a>
                    <a href="#contact" class="toc-link">Privacy Office</a>
                </nav>
            </div>
        </div>

        <div class="col-lg-9">
            <div id="summary" class="privacy-section shadow-sm">
                <h3><i class="bi bi-info-circle me-2"></i> Executive Summary</h3>
                <p class="lead">At InsurePro, we believe privacy is a fundamental right. This document outlines how we protect your digital footprint while providing top-tier insurance services.</p>
            </div>

            <div id="data-collection" class="privacy-section shadow-sm">
                <h3><i class="bi bi-database-add me-2"></i> Information We Collect</h3>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded-3">
                            <h6 class="fw-bold">Contact Details</h6>
                            <p class="small text-muted mb-0">Name, verified email, and encrypted phone records.</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded-3">
                            <h6 class="fw-bold">Usage Data</h6>
                            <p class="small text-muted mb-0">IP logs, browser metadata, and session activity.</p>
                        </div>
                    </div>
                </div>
                <details class="mt-3">
                    <summary class="text-primary fw-bold cursor-pointer">View Technical Collection List</summary>
                    <p class="mt-2 small text-muted">We utilize AES-256 encryption for all PII (Personally Identifiable Information) stored in our cloud gateways.</p>
                </details>
            </div>

            <div id="usage" class="privacy-section shadow-sm">
                <h3><i class="bi bi-cpu me-2"></i> Data Utilization</h3>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Personalizing coverage recommendations.</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Automated premium calculation logic.</li>
                    <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Fraud prevention and security monitoring.</li>
                </ul>
            </div>

            <div id="contact" class="privacy-section shadow-sm bg-primary text-white">
                <h3 class="text-white">Privacy Office</h3>
                <p class="opacity-75">Direct all inquiries regarding the GDPR/CCPA compliance to our legal team.</p>
                <div class="d-flex gap-4 mt-4">
                    <div>
                        <h6 class="fw-bold mb-1">Email</h6>
                        <a href="mailto:privacy@insurepro.com" class="text-warning text-decoration-none">privacy@insurepro.com</a>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">Response Time</h6>
                        <span>24 - 48 Hours</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>