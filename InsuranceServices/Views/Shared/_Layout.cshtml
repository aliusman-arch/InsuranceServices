<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InsurePro</title>

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        :root {
            --primary-blue: #003366;
            --accent-orange: #ff9900;
            --transition: all 0.3s ease;
        }

        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #f4f7f9;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            background-color: var(--primary-blue) !important;
            padding: 0.8rem 0;
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
        }

        /* Nav Link Styling */
        .nav-link {
            font-weight: 600;
            color: rgba(255,255,255,0.75) !important;
            transition: var(--transition);
            font-size: 0.95rem;
            margin: 0 5px;
        }

            .nav-link:hover, .nav-link.active, .show > .nav-link {
                color: var(--accent-orange) !important;
            }

        /* Centered Nav Logic */
        .center-nav {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
        }

        /* Dropdown Styling */
        .dropdown-menu {
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            border-radius: 12px;
            padding: 10px;
            margin-top: 10px;
        }

        .dropdown-item {
            border-radius: 8px;
            padding: 8px 15px;
            font-size: 0.9rem;
            transition: all 0.2s;
        }

            .dropdown-item:hover {
                background-color: #f8f9fa;
                color: var(--primary-blue);
                transform: translateX(5px);
            }

            .dropdown-item.active, .dropdown-item:active {
                background-color: var(--primary-blue);
                color: white;
            }

        /* Mobile Fixes */
        @@media (max-width: 1200px) {
            .center-nav {
                position: static;
                transform: none;
                width: 100%;
                justify-content: center;
                flex-wrap: wrap;
                margin: 15px 0;
            }
        }

        #backToTop {
            position: fixed;
            bottom: 30px;
            right: 30px;
            display: none;
            z-index: 1000;
            border-radius: 50%;
            width: 50px;
            height: 50px;
        }

        footer {
            background: #111;
            color: #bbb;
            padding: 3rem 0;
            margin-top: auto;
        }
    </style>
</head>
<body>
    @{
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
        var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
        var isLoggedIn = Context.Session.GetInt32("UserId") != null;
        var isAdmin = Context.Session.GetString("UserRole") == "Admin";
        var userName = Context.Session.GetString("UserName");
    }

    <header>
        <nav class="navbar navbar-expand-xl navbar-dark sticky-top">
            <div class="container position-relative">
                @* LEFT: Brand *@
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shield-lock-fill text-warning me-2 fs-3"></i>
                    <span>INSURE<span class="text-warning">PRO</span></span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">

                    @* CENTER: Main Navigation *@
                    <ul class="navbar-nav center-nav">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Policy" && currentAction == "BrowseSchemes" ? "active" : "")" asp-controller="Policy" asp-action="BrowseSchemes">Plans</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Strategies" ? "active" : "")" asp-controller="Home" asp-action="Strategies">Strategies</a>
                        </li>

                        @* LOGGED IN USER: "My Dashboard" Dropdown (The Declutter Fix) *@
                        @if (isLoggedIn && !isAdmin)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="dashboardDrop" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    My Dashboard
                                </a>
                                <ul class="dropdown-menu shadow-lg animate slideIn" aria-labelledby="dashboardDrop">
                                    <li><h6 class="dropdown-header text-uppercase small fw-bold">Management</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Policy" asp-action="MyPolicies"><i class="bi bi-folder2-open me-2 text-primary"></i>My Policies</a></li>
                                    <li><a class="dropdown-item" asp-controller="Policy" asp-action="PaymentHistory"><i class="bi bi-clock-history me-2 text-primary"></i>History</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header text-uppercase small fw-bold">Tools</h6></li>
                                    <li><a class="dropdown-item" asp-controller="Policy" asp-action="Payment"><i class="bi bi-credit-card me-2 text-success"></i>Pay Premium</a></li>
                                    <li><a class="dropdown-item" asp-controller="Policy" asp-action="LoanRequest"><i class="bi bi-cash-coin me-2 text-success"></i>Request Loan</a></li>
                                    <li><a class="dropdown-item" asp-controller="Policy" asp-action="Calculator"><i class="bi bi-calculator me-2 text-warning"></i>Calculator</a></li>
                                </ul>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Privacy" ? "active" : "")" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    @* RIGHT: Admin & User Profile *@
                    <div class="d-flex align-items-center ms-auto gap-2">
                        @if (isAdmin)
                        {
                            <a class="btn btn-danger btn-sm px-3 fw-bold rounded-pill shadow-sm" asp-controller="Admin" asp-action="Dashboard">
                                <i class="bi bi-speedometer2 me-1"></i> ADMIN PANEL
                            </a>
                        }

                        @if (isLoggedIn)
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-light btn-sm dropdown-toggle rounded-pill px-3 py-2 d-flex align-items-center border-0" style="background: rgba(255,255,255,0.1);" type="button" data-bs-toggle="dropdown">
                                    <div class="bg-warning text-dark rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 25px; height: 25px; font-size: 0.8rem; font-weight: bold;">
                                        @userName?.Substring(0, 1).ToUpper()
                                    </div>
                                    <span class="d-none d-md-inline">@userName</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg" style="min-width: 200px;">
                                    <li><span class="dropdown-header">Signed in as <br><strong class="text-dark">@userName</strong></span></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Index"><i class="bi bi-house me-2"></i> Home</a></li>
                                    <li><a class="dropdown-item" asp-controller="Policy" asp-action="Feedback"><i class="bi bi-chat-heart me-2"></i> Feedback</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger fw-bold" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i> Log Out
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex gap-2">
                                <a class="btn btn-link text-white text-decoration-none fw-bold" asp-controller="Account" asp-action="Login">Sign In</a>
                                <a class="btn btn-warning btn-sm rounded-pill px-4 fw-bold shadow-sm" asp-controller="Account" asp-action="Register">Join Now</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-container py-5 flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <button id="backToTop" class="btn btn-warning shadow-lg border-0 text-white">
        <i class="bi bi-arrow-up fw-bold"></i>
    </button>

    <footer>
        <div class="container">
            <div class="row g-5 text-center text-md-start">
                <div class="col-md-4">
                    <h5 class="text-white fw-bold mb-4">InsurePro Platform</h5>
                    <p class="small opacity-75">Secure, Automated, Reliable. Your 15-page complete insurance solution.</p>
                </div>
                <div class="col-md-4 text-center">
                    <h5 class="text-white fw-bold mb-4">Quick Links</h5>
                    <ul class="list-unstyled small">
                        <li><a class="text-white-50 text-decoration-none" asp-controller="Policy" asp-action="Feedback">Submit Feedback</a></li>
                    </ul>
                </div>
                <div class="col-md-4 text-center text-md-end">
                    <h5 class="text-white fw-bold mb-4">Administrator</h5>
                    <p class="small text-white-50">sys-admin@insurepro.com</p>
                </div>
            </div>
            <hr class="my-4 opacity-25">
            <p class="text-center small opacity-50">&copy; @DateTime.Now.Year - InsurePro Digital Platform.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            // Smooth Scroll Back to Top
            $(window).scroll(function() {
                if ($(this).scrollTop() > 300) { $('#backToTop').fadeIn(); }
                else { $('#backToTop').fadeOut(); }
            });
            $('#backToTop').click(function() {
                $('html, body').animate({scrollTop: 0}, 400);
                return false;
            });
        });
    </script>
</body>
</html>