@model IEnumerable<InsuranceServices.Models.PremiumPayment>
@{
    ViewData["Title"] = "Payment History";
}

<style>
    .history-card {
        border-radius: 20px;
        border: none;
        background: #ffffff;
    }

    .table thead th {
        background-color: #f8f9fa;
        text-transform: uppercase;
        font-size: 0.75rem;
        letter-spacing: 1px;
        color: #666;
        border: none;
        padding: 1.2rem;
    }

    .table tbody td {
        padding: 1.2rem;
        border-bottom: 1px solid #f1f1f1;
        font-size: 0.95rem;
    }

    .payment-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 15px;
    }

    .mode-badge {
        font-size: 0.8rem;
        font-weight: 600;
        padding: 5px 12px;
        border-radius: 50px;
        background: #eef2f7;
        color: var(--primary-blue);
    }

    .summary-widget {
        background: linear-gradient(135deg, var(--primary-blue), #0055aa);
        color: white;
        border-radius: 15px;
        padding: 25px;
    }
</style>

<div class="container py-5">
    <div class="row mb-5 align-items-center">
        <div class="col-md-6 text-center text-md-start">
            <h2 class="fw-bold mb-1" style="color: var(--primary-blue);">Transaction Ledger</h2>
            <p class="text-muted">Review all your premium contributions and payment methods.</p>
        </div>
        <div class="col-md-6 text-center text-md-end">
            <a asp-action="Payment" class="btn btn-warning rounded-pill px-4 fw-bold shadow-sm">
                <i class="bi bi-plus-lg me-2"></i>Make a Payment
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card history-card shadow-sm py-5 text-center">
            <div class="py-5">
                <i class="bi bi-credit-card-2-back display-1 text-muted opacity-25"></i>
                <h4 class="fw-bold mt-4 text-secondary">No Transactions Found</h4>
                <p class="text-muted">Your payment history is currently empty.</p>
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="summary-widget shadow-sm">
                    <p class="small text-uppercase opacity-75 mb-1">Total Contributions</p>
                    <h2 class="fw-bold mb-0">$@Model.Sum(p => p.AmountPaid).ToString("N2")</h2>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card history-card shadow-sm p-4 d-flex flex-row align-items-center">
                    <div class="payment-icon bg-light text-primary">
                        <i class="bi bi-receipt fs-4"></i>
                    </div>
                    <div>
                        <p class="small text-uppercase text-muted mb-0">Total Payments</p>
                        <h4 class="fw-bold mb-0">@Model.Count()</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="card history-card shadow-sm overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Transaction Date</th>
                            <th>Policy Details</th>
                            <th>Payment Mode</th>
                            <th class="text-end">Amount Paid</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="payment-icon bg-light text-secondary">
                                            <i class="bi bi-calendar-check"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@payment.PaymentDate.ToString("MMM dd, yyyy")</div>
                                            <div class="small text-muted">@payment.PaymentDate.ToString("hh:mm tt")</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold">@payment.UserPolicy?.InsuranceScheme?.SchemeName</div>
                                    <div class="small text-muted text-uppercase">ID: @payment.UserPolicy?.PolicyNumber</div>
                                </td>
                                <td>
                                    <span class="mode-badge">
                                        @if (payment.PaymentMode.Contains("Card"))
                                        {
                                            <i class="bi bi-credit-card me-1"></i>
                                        }
                                        else if (payment.PaymentMode.Contains("Bank"))
                                        {

                                            <i class="bi bi-bank me-1"></i>
                                        }
                                        else
                                        {

                                            <i class="bi bi-wallet2 me-1"></i>
                                        }
                                        @payment.PaymentMode
                                    </span>
                                </td>
                                <td class="text-end">
                                    <span class="fs-5 fw-bold text-success">+$@payment.AmountPaid.ToString("N2")</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>