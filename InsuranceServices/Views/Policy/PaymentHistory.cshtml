@model IEnumerable<InsuranceServices.Models.PremiumPayment>
@{
    ViewData["Title"] = "Payment History";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold"><i class="bi bi-clock-history"></i> My Payment History</h2>
        <a asp-action="Payment" class="btn btn-success"><i class="bi bi-plus-circle"></i> New Payment</a>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0 text-center py-5">
            <i class="bi bi-cash-stack display-1 text-muted"></i>
            <h4 class="mt-3">No payments found</h4>
            <p>Once you make a premium payment, it will appear here.</p>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>Date</th>
                            <th>Policy Number</th>
                            <th>Scheme Name</th>
                            <th>Mode</th>
                            <th>Amount Paid</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payment in Model)
                        {
                            <tr>
                                <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                <td class="fw-bold text-secondary">@payment.UserPolicy?.PolicyNumber</td>
                                <td>@payment.UserPolicy?.InsuranceScheme?.SchemeName</td>
                                <td>@payment.PaymentMode</td>
                                <td class="text-success fw-bold">$@payment.AmountPaid</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>