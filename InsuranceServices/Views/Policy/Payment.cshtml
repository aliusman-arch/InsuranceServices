@model IEnumerable<InsuranceServices.Models.UserPolicy>
@{
    ViewData["Title"] = "Secure Checkout";
}

<style>
    .checkout-card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .checkout-header {
        background: var(--primary-blue);
        color: white;
        padding: 30px;
        text-align: center;
    }

    .payment-option {
        border: 2px solid #f1f1f1;
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 10px;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
    }

        .payment-option:hover {
            border-color: var(--accent-orange);
            background-color: #fffaf0;
        }

        .payment-option input[type="radio"]:checked + label {
            color: var(--primary-blue);
            font-weight: bold;
        }

    .security-badge {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
        font-size: 0.85rem;
        color: #666;
    }

    .form-label {
        font-weight: 700;
        color: #444;
        font-size: 0.9rem;
        text-transform: uppercase;
        margin-bottom: 8px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card checkout-card">
                <div class="checkout-header">
                    <i class="bi bi-shield-lock-fill display-4 text-warning mb-2"></i>
                    <h3 class="fw-bold mb-0">Secure Premium Payment</h3>
                    <p class="opacity-75 mb-0 small">Encrypted 256-bit Transaction</p>
                </div>

                <div class="card-body p-4 p-lg-5">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-exclamation-circle text-info display-4 mb-3"></i>
                            <h5 class="fw-bold">No Active Policies Found</h5>
                            <p class="text-muted">You can only pay for policies that have been "Approved" by the administrator.</p>
                            <a asp-action="BrowseSchemes" class="btn btn-primary rounded-pill px-4">Browse Plans</a>
                        </div>
                    }
                    else
                    {
                        <form asp-action="ProcessPayment" method="post">
                            @* POLICY SELECTION *@
                            <div class="mb-4">
                                <label class="form-label"><i class="bi bi-file-earmark-check me-2"></i>Select Policy to Pay</label>
                                <select name="policyId" class="form-select form-select-lg shadow-sm" required>
                                    @foreach (var p in Model)
                                    {
                                        <option value="@p.PolicyId">
                                            @p.InsuranceScheme?.SchemeName (@p.PolicyNumber)
                                        </option>
                                    }
                                </select>
                            </div>

                            @* AMOUNT INPUT *@
                            <div class="mb-4">
                                <label class="form-label"><i class="bi bi-currency-dollar me-2"></i>Payment Amount</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text bg-white border-end-0">$</span>
                                    <input type="number" name="amount" class="form-control border-start-0 ps-0" placeholder="0.00" step="0.01" required />
                                </div>
                                <div class="form-text">Enter the exact amount mentioned in your policy schedule.</div>
                            </div>

                            @* PAYMENT MODE SELECTION *@
                            <div class="mb-4">
                                <label class="form-label"><i class="bi bi-credit-card me-2"></i>Select Payment Method</label>

                                <div class="row g-2">
                                    <div class="col-12">
                                        <div class="payment-option">
                                            <input class="form-check-input me-3" type="radio" name="paymentMode" id="card" value="Credit/Debit Card" checked>
                                            <label class="form-check-label w-100 d-flex justify-content-between align-items-center" for="card">
                                                <span>Credit / Debit Card</span>
                                                <div class="fs-4 text-muted">
                                                    <i class="bi bi-credit-card-2-back"></i>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="payment-option">
                                            <input class="form-check-input me-3" type="radio" name="paymentMode" id="netbank" value="Net Banking">
                                            <label class="form-check-label w-100 d-flex justify-content-between align-items-center" for="netbank">
                                                <span>Net Banking</span>
                                                <div class="fs-4 text-muted">
                                                    <i class="bi bi-bank"></i>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="payment-option">
                                            <input class="form-check-input me-3" type="radio" name="paymentMode" id="wallet" value="UPI / Digital Wallet">
                                            <label class="form-check-label w-100 d-flex justify-content-between align-items-center" for="wallet">
                                                <span>Digital Wallet / UPI</span>
                                                <div class="fs-4 text-muted">
                                                    <i class="bi bi-phone"></i>
                                                </div>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="security-badge mb-4 d-flex align-items-center">
                                <i class="bi bi-patch-check-fill text-success fs-3 me-3"></i>
                                <div>
                                    <strong class="d-block text-dark">PCI-DSS Compliant</strong>
                                    Your payment information is processed securely and never stored.
                                </div>
                            </div>

                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-warning btn-lg fw-bold rounded-pill py-3 shadow">
                                    PROCESS PAYMENT NOW
                                </button>
                                <a asp-action="MyPolicies" class="btn btn-link text-muted text-decoration-none small">
                                    <i class="bi bi-arrow-left me-1"></i> Return to Policies
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>

            <div class="text-center mt-4">
                <img src="https://upload.wikimedia.org/wikipedia/commons/b/b5/PayPal.svg" height="20" class="me-3 opacity-50" alt="Paypal">
                <img src="https://upload.wikimedia.org/wikipedia/commons/5/5e/Visa_Inc._logo.svg" height="15" class="me-3 opacity-50" alt="Visa">
                <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" height="20" class="opacity-50" alt="Mastercard">
            </div>
        </div>
    </div>
</div>