@model InsuranceServices.Models.UserPolicy
@{
    ViewData["Title"] = "Confirm Application";
}

<style>
    .apply-container {
        max-width: 700px;
        margin: auto;
    }

    .apply-card {
        border: none;
        border-radius: 20px;
        overflow: hidden;
        background: #fff;
    }

    .apply-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        padding: 40px 20px;
        text-align: center;
    }

    .benefit-tag {
        background: #f0f7ff;
        border-radius: 10px;
        padding: 15px;
        border-left: 4px solid #007bff;
        margin-bottom: 10px;
    }

    .document-seal {
        position: absolute;
        top: 20px;
        right: 20px;
        opacity: 0.1;
        font-size: 5rem;
        transform: rotate(15deg);
    }
</style>

<div class="container py-5 apply-container">
    <div class="card apply-card shadow-lg">
        <div class="apply-header position-relative">
            <i class="bi bi-shield-check-fill document-seal"></i>
            <i class="bi bi-file-earmark-medical display-3 mb-3"></i>
            <h2 class="fw-bold">Policy Application</h2>
            <p class="mb-0 opacity-75">You are one step away from securing your future.</p>
        </div>

        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
                <span class="text-muted text-uppercase small fw-bold">Selected Plan</span>
                <h3 class="text-primary fw-bold">@ViewBag.SchemeName</h3>
            </div>

            <div class="mb-4">
                <h6 class="fw-bold mb-3"><i class="bi bi-info-circle me-2"></i>Application Summary</h6>
                <div class="benefit-tag">
                    <div class="d-flex justify-content-between">
                        <span><i class="bi bi-calendar-event me-2"></i>Start Date:</span>
                        <span class="fw-bold text-dark">Today (@DateTime.Now.ToString("MMM dd, yyyy"))</span>
                    </div>
                </div>
                <div class="benefit-tag">
                    <div class="d-flex justify-content-between">
                        <span><i class="bi bi-clock-history me-2"></i>Policy Term:</span>
                        <span class="fw-bold text-dark">Standard Annual Renewal</span>
                    </div>
                </div>
                <div class="benefit-tag">
                    <div class="d-flex justify-content-between">
                        <span><i class="bi bi-patch-check me-2"></i>Status:</span>
                        <span class="badge bg-warning text-dark px-3">Review Pending</span>
                    </div>
                </div>
            </div>

            <form asp-action="Apply" method="post" class="mt-4">
                <input type="hidden" name="SchemeId" value="@ViewBag.SchemeId" />

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" id="termsCheck" required>
                    <label class="form-check-label small text-muted" for="termsCheck">
                        I hereby declare that the information provided is true to the best of my knowledge and I agree to the <a href="#" class="text-decoration-none">Standard Policy Terms</a> of InsurePro.
                    </label>
                </div>

                <div class="row g-3">
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-primary btn-lg w-100 rounded-pill py-3 fw-bold shadow">
                            SUBMIT APPLICATION
                        </button>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="BrowseSchemes" class="btn btn-outline-secondary btn-lg w-100 rounded-pill py-3">
                            Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <div class="card-footer bg-light border-0 text-center py-3">
            <small class="text-muted"><i class="bi bi-lock-fill me-1"></i>Secure Application Portal</small>
        </div>
    </div>
</div>