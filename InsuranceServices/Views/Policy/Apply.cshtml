@model InsuranceServices.Models.UserPolicy
@{
    ViewData["Title"] = "Apply for Policy";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-body p-5 text-center">
                    <i class="bi bi-file-earmark-check text-success display-1"></i>
                    <h2 class="mt-3">Confirm Application</h2>
                    <p class="text-muted">You are applying for the following plan:</p>
                    <h4 class="fw-bold text-primary">@ViewBag.SchemeName</h4>

                    <form asp-action="Apply" method="post" class="mt-4">
                        <input type="hidden" name="SchemeId" value="@ViewBag.SchemeId" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">CONFIRM & APPLY</button>
                            <a asp-action="BrowseSchemes" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>