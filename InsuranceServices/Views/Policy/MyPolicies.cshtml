@model IEnumerable<InsuranceServices.Models.UserPolicy>
@{
    ViewData["Title"] = "My Policies";
}

<style>
    .policy-card {
        border: none;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: white;
        overflow: hidden;
        position: relative;
    }

        .policy-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    .status-strip {
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 6px;
    }

    .status-active {
        background-color: #28a745;
    }

    .status-pending {
        background-color: #ffc107;
    }

    .status-expired {
        background-color: #dc3545;
    }

    .policy-header {
        background: #f8f9fa;
        padding: 15px 20px;
        border-bottom: 1px solid #eee;
    }

    .policy-body {
        padding: 20px;
    }

    .info-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #888;
        font-weight: 700;
        margin-bottom: 2px;
    }

    .info-value {
        font-weight: 600;
        color: #333;
        font-size: 1rem;
    }

    .empty-state-box {
        background: white;
        border-radius: 20px;
        padding: 60px;
        text-align: center;
        border: 2px dashed #dee2e6;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold mb-1" style="color: var(--primary-blue);">
                <i class="bi bi-wallet2 me-2"></i>My Portfolio
            </h2>
            <p class="text-muted mb-0">Manage your active coverage and insurance documents.</p>
        </div>

        <a asp-controller="Policy" asp-action="BrowseSchemes" class="btn btn-warning rounded-pill px-4 shadow-sm fw-bold">
            <i class="bi bi-plus-lg me-1"></i> New Policy
        </a>
    </div>

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="empty-state-box">
                    <i class="bi bi-shield-lock display-1 text-muted opacity-25 mb-3"></i>
                    <h3 class="fw-bold text-muted">No Active Policies</h3>
                    <p class="text-muted mb-4">You haven't subscribed to any protection plans yet.</p>
                    <a asp-action="BrowseSchemes" asp-controller="Policy" class="btn btn-primary btn-lg rounded-pill px-5 shadow">
                        Explore Plans
                    </a>
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                var statusClass = item.Status == "Pending" ? "status-pending" :
                (item.Status == "Approved" ? "status-active" : "status-expired");

                var badgeClass = item.Status == "Pending" ? "bg-warning text-dark" :
                (item.Status == "Approved" ? "bg-success" : "bg-danger");

                // Logic Fix: Calculate a monthly premium (e.g., 0.1% of limit)
                var monthlyPremium = (item.InsuranceScheme?.AmountLimit ?? 0) * 0.001m;

                <div class="col-lg-6 col-xl-4">
                    <div class="card policy-card shadow-sm h-100">
                        <div class="status-strip @statusClass"></div>

                        <div class="policy-header d-flex justify-content-between align-items-center">
                            <span class="badge @badgeClass rounded-pill px-3 py-2">
                                @item.Status
                            </span>
                            <small class="text-muted font-monospace">@item.PolicyNumber</small>
                        </div>

                        <div class="policy-body">
                            <h5 class="fw-bold text-primary mb-3">
                                @(item.InsuranceScheme?.SchemeName ?? "Standard Plan")
                            </h5>

                            <div class="row g-3 mb-4">
                                <div class="col-6">
                                    <div class="info-label">Effective Date</div>
                                    <div class="info-value">@item.StartDate.ToString("MMM dd, yyyy")</div>
                                </div>
                                <div class="col-6">
                                    <div class="info-label">Policy Term</div>
                                    <div class="info-value">@item.InsuranceScheme?.TenureYears Years</div>
                                </div>
                                <div class="col-6">
                                    <div class="info-label">Est. Premium</div>
                                    <div class="info-value text-success">$@monthlyPremium.ToString("N2")</div>
                                </div>
                                <div class="col-6">
                                    <div class="info-label">Max Coverage</div>
                                    <div class="info-value text-primary">$@item.InsuranceScheme?.AmountLimit.ToString("N0")</div>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <a asp-action="PaymentHistory" class="btn btn-outline-secondary btn-sm rounded-pill">
                                    View History
                                </a>
                                @if (item.Status == "Approved")
                                {
                                    <a asp-action="Payment" class="btn btn-primary btn-sm rounded-pill">
                                        Pay Now
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>