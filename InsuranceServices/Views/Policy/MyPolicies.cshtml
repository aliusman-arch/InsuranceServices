@model IEnumerable<InsuranceServices.Models.UserPolicy>
@{
    ViewData["Title"] = "My Policies";
}

<div class="container py-4">
    <h2 class="mb-4">My Insurance Policies</h2>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Policy ID</th>
                        <th>Policy Number</th>
                        <th>Scheme Name</th>
                        <th>Start Date</th>
                        <th>Expiry Date</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>#@item.PolicyId</td>
                            <td class="text-uppercase fw-bold text-muted">@item.PolicyNumber</td>
                            <td class="fw-bold">@item.InsuranceScheme?.SchemeName</td>
                            <td>@item.StartDate.ToShortDateString()</td>
                            <td>@item.EndDate.ToShortDateString()</td>
                            <td>
                                @if (item.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Pending Approval</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.Status</span>
                                }
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <p class="text-muted">You don't have any active policies yet.</p>
                                <a asp-action="BrowseSchemes" class="btn btn-primary">Browse Plans</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>