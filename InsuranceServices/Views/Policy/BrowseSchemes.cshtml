@model IEnumerable<InsuranceServices.Models.InsuranceScheme>
@{
    ViewData["Title"] = "Available Insurance Plans";
}

<style>
    .plan-card {
        border: 1px solid rgba(0,0,0,0.05);
        border-radius: 20px;
        background: white;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        overflow: hidden;
    }

        .plan-card:hover {
            transform: translateY(-12px);
            box-shadow: 0 20px 40px rgba(0, 51, 102, 0.12) !important;
        }

    .plan-header {
        background: linear-gradient(135deg, var(--primary-blue), #0055aa);
        padding: 30px 20px;
        color: white;
        text-align: center;
        position: relative;
    }

    .scheme-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(5px);
        color: white;
        padding: 4px 12px;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .price-tag {
        font-size: 2.2rem;
        font-weight: 800;
        color: var(--primary-blue);
        margin: 20px 0;
    }

    .price-currency {
        font-size: 1rem;
        vertical-align: super;
        margin-right: 2px;
    }

    .feature-item {
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .feature-item i {
            color: var(--accent-orange);
            margin-right: 8px;
        }

    .btn-apply {
        border-radius: 50px;
        padding: 12px;
        font-weight: 700;
        letter-spacing: 0.5px;
        transition: var(--transition);
    }

    .category-icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
        display: block;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center text-center mb-5">
        <div class="col-lg-7">
            <h1 class="display-5 fw-bold" style="color: var(--primary-blue);">Secure Your Future</h1>
            <p class="text-muted lead">Transparent pricing. Comprehensive coverage. Explore our top-tier insurance schemes designed for your peace of mind.</p>
            <div class="mx-auto mt-3" style="width: 60px; height: 4px; background: var(--accent-orange); border-radius: 2px;"></div>
        </div>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 plan-card shadow-sm">
                    <div class="plan-header">
                        <span class="scheme-badge">@item.SchemeType</span>

                        @* Dynamic Icon Logic *@
                        <span class="category-icon">
                            @if (item.SchemeType.Contains("Life"))
                            {
                                <i class="bi bi-heart-fill"></i>
                            }
                            else if (item.SchemeType.Contains("Medical") || item.SchemeType.Contains("Health"))
                            {

                                <i class="bi bi-capsule"></i>
                            }
                            else if (item.SchemeType.Contains("Motor") || item.SchemeType.Contains("Car"))
                            {

                                <i class="bi bi-car-front-fill"></i>
                            }
                            else
                            {

                                <i class="bi bi-shield-shaded"></i>
                            }
                        </span>

                        <h4 class="fw-bold mb-0">@item.SchemeName</h4>
                    </div>

                    <div class="card-body text-center d-flex flex-column">
                        <div class="price-tag">
                            <span class="price-currency">$</span>@item.AmountLimit.ToString("N0")
                            <small class="text-muted fs-6 fw-normal">/ Max Cover</small>
                        </div>

                        <p class="text-muted px-3 mb-4" style="min-height: 50px;">@item.Description</p>

                        <div class="mt-auto">
                            <div class="feature-item">
                                <i class="bi bi-calendar-check"></i>
                                <span>Fixed Tenure: <strong>@item.TenureYears Years</strong></span>
                            </div>
                            <div class="feature-item">
                                <i class="bi bi-patch-check"></i>
                                <span>Instant Digital Approval</span>
                            </div>
                            <div class="feature-item mb-4">
                                <i class="bi bi-shield-lock"></i>
                                <span>100% Secure Processing</span>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-0 px-4 pb-4">
                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <a asp-action="Apply" asp-route-id="@item.SchemeId" class="btn btn-warning w-100 btn-apply shadow-sm">
                                APPLY FOR PLAN <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary w-100 btn-apply">
                                LOGIN TO APPLY
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>